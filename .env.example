# plato-system/.env.example
# Core
APP_URL=https://platosystem-mu.vercel.app
NODE_ENV=production

# Database (PostgreSQL)
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DBNAME?schema=public

# Auth (cookie-session in v1; later can be migrated to Auth.js if needed)
SESSION_SECRET=replace-with-32+chars-random
SESSION_COOKIE_NAME=plato_session

# Crypto / security utilities
ENCRYPTION_KEY=replace-with-32-bytes-hex-or-base64

# Stripe
STRIPE_SECRET_KEY=sk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PRICE_PRO_MONTHLY=price_xxx

# AI Providers
OPENAI_API_KEY=sk-xxx
ANTHROPIC_API_KEY=sk-ant-xxx

# Slack (optional)
SLACK_CLIENT_ID=xxx
SLACK_CLIENT_SECRET=xxx
SLACK_SIGNING_SECRET=xxx

# Webhooks (optional)
WEBHOOK_SIGNING_SECRET=replace-with-random
